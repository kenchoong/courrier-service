{
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "testMatch": ["<rootDir>/src/**/*.spec.ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.(ts|tsx)$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "transformIgnorePatterns": ["node_modules/inquirer"]
}
